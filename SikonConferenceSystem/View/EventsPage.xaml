        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <FlipView Background="White" BorderBrush="Black" BorderThickness="2" Grid.Row="0" SelectedIndex="{Binding SelectedDayIndex, Mode=TwoWay}" ItemsSource="{Binding EventDays}" MaxWidth="1000" MaxHeight="150" HorizontalAlignment="Center">
                <FlipView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding}" Style="{StaticResource SubHeader}"/>
                    </DataTemplate>
                </FlipView.ItemTemplate>
            </FlipView>


            <ListView Background="Beige" ItemsSource="{Binding Source={StaticResource ViewSourceEvents}}" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="1">
                <ListView.GroupStyle>
                    <GroupStyle HidesIfEmpty="True">
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate x:DataType="viewModel:HourGroup">
                                <TextBlock Text="{Binding Time}" Style="{StaticResource SubHeader}"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </ListView.GroupStyle>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel AreStickyGroupHeadersEnabled="True"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModel:EventAdapter">
                        <StackPanel Width="800" Orientation="Horizontal" Background="{Binding Color}" Margin="0,10,0,10">
                            <PersonPicture Width="100" Height="100" ProfilePicture="{Binding Event.ImagePath}"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Event.Type}"/>
                                <TextBlock Text="{Binding FormattedDescription}"/>
                                <TextBlock Text="{Binding FormattedDuration}"/>
                                <Button Content="See Event" Click="Button_Click" CommandParameter="{Binding Event}"></Button>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>


    </Grid>
