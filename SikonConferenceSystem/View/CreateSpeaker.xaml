<Page
    x:Class="SikonConferenceSystem.View.CreateSpeaker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SikonConferenceSystem.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Width="500" Height="400">
            <TextBox Text="Name" FontSize="36"></TextBox>
            <TextBox Text="Phonenumber" FontSize="36"></TextBox>
            <TextBox Text="Email" FontSize="36"></TextBox>
            <TextBox Text="Password" FontSize="36"></TextBox>
            <StackPanel Orientation="Horizontal" Spacing="50">
                <Button Content="Create" FontSize="24"></Button>
                <Button Content="Update" FontSize="24"></Button>
                <Button Content="Delete" FontSize="24"></Button>
                <Button Content="Clear" FontSize="24"></Button>
            </StackPanel>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
